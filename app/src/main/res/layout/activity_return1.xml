<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    tools:context=".Return1">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/candal"
                android:text="Upload the photo of the lost Item here..."
                android:textSize="28dp"
                tools:autoSizeTextType="uniform"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="34dp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="39dp"
                android:background="?android:attr/listDivider"
                android:visibility="visible" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="133dp"
                android:background="?android:attr/listDivider"
                android:visibility="visible" />

            <Button
                android:id="@+id/button3"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewC"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="111dp"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="107dp"
                android:layout_marginRight="107dp"
                android:fontFamily="@font/alfa_slab_one"
                android:onClick="btnBrowse_Click"
                android:shadowColor="@color/colorPrimary"
                android:text="Browse image to Upload"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/imageViewC"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="34dp" />


            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText7"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="121dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:hint="Eg: Rakesh Joshi"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="121dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:hint="Eg: Bandra Railway Office"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="121dp"
                android:layout_marginTop="6dp"
                android:ems="10"
                android:hint="Eg: Purse"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/buttonSave"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText6"
                android:layout_alignStart="@+id/button3"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:onClick="btnUpload_Click"
                android:text="Share Details"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="216dp"
                android:layout_height="52dp"
                android:layout_below="@+id/button3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:text="Personal Details"
                android:textSize="24sp"
                tools:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="81dp"
                android:layout_height="33dp"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="Lost Item"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Your Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="98dp"
                android:layout_height="33dp"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Department"
                android:textSize="18sp" />

            <Button
                android:id="@+id/camerabtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/imageViewC"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="49dp"
                android:layout_marginRight="49dp"
                android:background="@drawable/ic_action_camera"
                android:onClick="camera" />

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>