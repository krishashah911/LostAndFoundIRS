<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    tools:context=".ReturnItem">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="212dp"
                android:layout_height="53dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:text="Station Name"
                android:textSize="24sp"
                tools:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="216dp"
                android:layout_height="52dp"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="63dp"
                android:text="Train Name"
                android:textSize="24sp"
                tools:autoSizeTextType="uniform" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="117dp"
                android:background="?android:attr/listDivider"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:visibility="visible" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/autoCompleteTextView2"
                android:layout_marginTop="7dp"
                android:background="?android:attr/listDivider"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:visibility="visible" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvDate"
                android:layout_marginTop="9dp"
                android:background="?android:attr/listDivider"
                android:visibility="visible" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvTime"
                android:layout_marginTop="6dp"
                android:background="?android:attr/listDivider"
                android:visibility="visible" />


            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:hint=" eg: Bandra"
                android:layout_marginTop="66dp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="12dp"
                android:hint=" eg: LokshaktiExpress"
                android:layout_marginLeft="12dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="64dp"
                android:text="Date"
                android:textSize="24sp"
                tools:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"
                android:hint="Select Date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="82dp"
                android:layout_height="44dp"
                android:layout_alignTop="@+id/divider7"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="Time"
                android:textSize="24sp"
                tools:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"
                android:hint="Select Time"
                android:textSize="18sp" />


            <Button
                android:id="@+id/button4"
                style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
                android:layout_width="52dp"
                android:layout_height="34dp"
                android:layout_alignTop="@+id/divider7"
                android:layout_marginStart="-15dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/textView8"
                android:layout_toRightOf="@+id/textView8"
                android:background="@drawable/ic_action_time"
                android:onClick="timebutton"
                android:textStyle="bold" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/alfa_slab_one"
        android:onClick="cbut"
        android:shadowColor="@color/colorPrimary"
        android:text="Next"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>